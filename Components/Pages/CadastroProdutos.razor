@page "/CadastroProdutos"



@code{
        <div class="container">
    
        <div class="row">
            <div class="col">
                <h2>Cadastro de Produtos</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <img src="wwwroot/imagens/produtos.avif" alt="produtos" class="img-produto">
            </div>
            <div class="col-8">
                <form method="GET" action="BancoDados/salvar.txt">
                    <div class="mt-3 form-floating">
                        <input type="number" class="form-control desabilitado" id="codigo" name="codigo" readonly >
                        <label for="codigo" class="form-label">Código</label>
                    </div>
                    <div class="mt-3 form-floating">
                        <input type="text" class="form-control" id="nome" name="nome" >
                        <label for="nome" class="form-label">Nome do Produto</label>
                    </div>
                    <div class="mt-3 form-floating">
                        <input type="valor" class="form-control" id="valor" name="valor" >
                        <label for="valor" class="form-label">Valor</label>
                    </div>
                    <div class="mt-3 form-floating">
                        <div class="row"> 
                        <div class="col">
                            <button type="button" class="btn btn-primary form-control botaoNovo">
                                Novo
                            </button>
                        </div>
                        <div class="col"> 
                            <button type="submit" class="btn btn-primary form-control botaoSalvar">
                                Salvar
                            </button>

                        </div>
                        </div>
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
    <div class="container mt-3">
        <div class="row">
            <div class="col">
                <h2>Produtos Cadastrados</h2>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-light table-hover">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nome do Poduto</th>
                            <th>Categoria</th>
                            <th>Valor</th>
                            <th>Editar</th>
                            <th>Excluir</th>
                        </tr>
                    </thead>
                    <tbody>
                       
                    </tbody>
                </table>
            </div>
        </div>

    </div>


        <script src="_framework/blazor.webview.js" autostart="false"></script>
}