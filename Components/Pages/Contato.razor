@page "/contato"

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contato - Projeto Integrador</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<!-- Hero Section -->
<section class="hero-section bg-light py-5">
  <div class="container text-center">
    <h1 class="display-4 fade-in">Entre em Contato</h1>
    <p class="lead fade-in" style="animation-delay: 0.5s;">Fale conosco para mais informações sobre o Projeto Integrador e o Senac.</p>
  </div>
</section>

<!-- Contact Form Section -->
<section class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center mb-4">Fale Conosco</h2>
      <form>
        <div class="mb-3">
          <label for="name" class="form-label">Nome Completo</label>
          <input type="text" class="form-control" id="name" placeholder="Seu nome completo">
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" class="form-control" id="email" placeholder="Seu email">
        </div>
        <div class="mb-3">
          <label for="message" class="form-label">Mensagem</label>
          <textarea class="form-control" id="message" rows="5" placeholder="Escreva sua mensagem aqui"></textarea>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary btn-lg">Enviar Mensagem</button>
        </div>
      </form>
    </div>
  </div>
</section>

<!-- Senac Button Section -->
<section class="text-center py-5 ">
  <div class="container">
    <h2 class="mb-4">Quer saber mais sobre o Senac?</h2>
    <p class="lead">Acesse o site oficial do Senac e descubra mais sobre os cursos e o Projeto Integrador.</p>
    <a href="http://cursos.se.senac.br/" class="btn btn-success btn-lg" target="_blank">Visitar o site do Senac</a>
  </div>
</section>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
